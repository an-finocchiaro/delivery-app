<h4><%= t '.title' %></h4>
<p><%= t '.subtitle' %> <%= @transport_mode.name %></p>

<%= form_with(model:[@transport_mode, @distance_rate]) do |f| %>
  <div>
    <%= f.label :min_distance_rate, :class => "form-label" %>
    <%= f.number_field :min_distance_rate, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :max_distance_rate, :class => "form-label" %>
    <%= f.number_field :max_distance_rate, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :price, :class => "form-label" %>
    <%= f.number_field :price, :class => "form-control" %>
  </div>
  <%= f.submit (t '.submit'), :class => "btn btn-danger" %>
<% end %>