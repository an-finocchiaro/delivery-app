<div>
  <% if user_signed_in? %>
    <% if current_user.admin? %>
      <p><%= t '.message_adm' %><%= current_user.name %>!</p>
      <%= link_to (t '.order_new'), new_order_path, :class => "btn btn-danger" %>
    <% else%>
      <p><%= t '.message_user' %><%= current_user.name %>!<p>
    <% end %>
  <% end %>
</div>
