
<%= form_with(model: @vehicle) do |f| %>
  <div>
    <%= f.label :transport_mode_id, :class => "form-label" %>
    <%= f.collection_select :transport_mode_id, @transport_modes, :id, :name, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :license, :class => "form-label" %>
    <%= f.text_field :license, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :brand, :class => "form-label" %>
    <%= f.text_field :brand, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :model, :class => "form-label" %>
    <%= f.text_field :model, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :year, :class => "form-label" %>
    <%= f.number_field :year, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :max_load, :class => "form-label" %>
    <%= f.number_field :max_load, :class => "form-control" %>
  </div>
  <div>
    <%= f.label :availability, :class => "form-label" %>
    <%= f.select :availability, options_for_select(Vehicle.availabilities.keys.map {|k| [I18n.t(k), k]}) %>
  </div>
  <%= f.submit (t '.register'), :class => "btn btn-danger" %>
<% end %>